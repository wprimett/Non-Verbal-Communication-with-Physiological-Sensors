@article{ejupi_detection_2018,
	title = {Detection of {Talking} in {Respiratory} {Signals}: {A} {Feasibility} {Study} {Using} {Machine} {Learning} and {Wearable} {Textile}-{Based} {Sensors}},
	volume = {18},
	copyright = {http://creativecommons.org/licenses/by/3.0/},
	shorttitle = {Detection of {Talking} in {Respiratory} {Signals}},
